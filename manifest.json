{
  "name": "QuickNotes",
  "description": "Extension for quick copy saved notes to clipboard",
  "version": "0.0.5",
  "manifest_version": 3,
  "minimum_chrome_version": "96",
  "icons":{
    "96" : "images/app_icon.png"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_title": "QuickNotes",
    "default_popup": "popup.html",
    "default_icon": {"96" : "images/popup_icon.png"}
  },
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab"
  ]
}
